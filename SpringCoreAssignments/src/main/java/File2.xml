<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

<bean id="Question" class="spring2.Question">
		<property name="QuestionId" value="01" />
		<property name="question" value="What are your Hobbies?" />
		<property name="AnswersList">
		<list>
			<value>Cycling</value>
			<value>Reading</value>
			<value>Playing Football</value>
		</list>
		</property>
		
		<property name="AnswersSet">
		<set>
			<value>Cycling</value>
			<value>Reading</value>
			<value>Playing Football</value>
		</set>
		</property>
		
		<property name="AnswersMap">
		<map>
			<entry key="1" value="Cycling"/>
			<entry key="2" value="Reading"/>
			<entry key="3" value="Playing Football"/>
		</map>
		</property>
		
	</bean>
    
</beans>    